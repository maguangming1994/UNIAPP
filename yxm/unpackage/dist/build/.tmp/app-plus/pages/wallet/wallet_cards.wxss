.user-top {
  padding-top: 15rpx;
  height: 320rpx;
}
.user-top .icons {
    position: absolute;
    top: 15rpx;
    right: 15rpx;
}
.user-top .iconfont {
    margin-right: 25rpx;
    font-size: 40rpx;
}
.user-info {
  padding: 0 30rpx;
}
.user-info .base-info {
    min-height: 150rpx;
}
.user-info .base-info .base-right {
      padding: 5rpx 30rpx;
}
.user-info .base-info .base-right .mtag {
        font-size: 24rpx;
        color: #fff;
        background: #76b5ff;
        padding: 5rpx 30rpx;
        border-radius: 8rpx;
        margin-left: 30rpx;
        font-weight: 300;
}
.user-info .base-info .base-right .summary {
        color: #697685;
        font-size: 26rpx;
}
.user-info .base-info .desc {
      font-size: 24rpx;
      color: #697685;
}
.user-info .base-info .avatar-wrap {
      margin-top: -50%;
}
.user-info .base-info .avatar-wrap .avatar {
        width: 180rpx;
        height: 180rpx;
        border-radius: 50%;
        box-shadow: 0 5rpx 24rpx #ac2803;
}
.user-nos {
  padding-bottom: 37rpx;
}
.user-nos .no {
    font-size: 36rpx;
}
.user-nos .txt {
    font-size: 24rpx;
    color: #697685;
}
.menus {
  padding-left: 33rpx;
  padding-right: 33rpx;
  position: relative;
  background: #fff;
  font-size: 32rpx;
}
.menus .item-menu {
    border-bottom: solid 1px #f0f5fb;
}
.menus .icon-item ._img {
    width: 50rpx;
    height: 50rpx;
    vertical-align: middle;
    margin-right: 24rpx;
}
.user-top {
  text-align: center;
  height: 400rpx;
  overflow: hidden;
}
.user-top .ref_code {
    margin-top: 105rpx;
    font-size: 48rpx;
}
.user-top .text {
    font-size: 32rpx;
}
.rew_record {
  width: 400rpx;
  height: 400rpx;
  border-radius: 50% 50% 0 0;
  position: relative;
  margin: auto;
  bottom: -50%;
  box-shadow: 0 0 37rpx #000;
}
.rew_record .income {
    padding-top: 90rpx;
    line-height: 45rpx;
}
.rew_record .income-desc {
    line-height: 45rpx;
    font-size: 24rpx;
}
.is-bg-orange {
  background: #ff7528;
}
.rabs {
  font-size: 33rpx;
  line-height: 80rpx;
  color: #b23510;
}
.rabs .active {
  color: #fff;
}
.card-item {
  background: #f5a623;
  color: #fff;
  border-radius: 8rpx;
}

