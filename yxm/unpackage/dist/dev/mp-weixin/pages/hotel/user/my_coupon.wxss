
.style-three {
    background-color: #378AE8;
    border: none;
    color: #fff;
}
.info-box{
    padding:15px 15px 15px 1.6rem;
}
.info-box:before {
    content: "";
    position: absolute;
    left: -.66rem;
    width: 2rem;
    height: 2rem;
    top: 50%;
    -webkit-transform: translate(-30%,-50%);
    transform: translate(-30%,-50%);
    box-shadow: 3px 0 0 #aeadad;
    border-radius: 80%;
    background-color: #f5f5f5;
}
.coupon-item .nick {
    padding: .66% 0;
    color: #fff;
}
.coupon-item .coupon-money {
    width: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
}
.coupon-item .coupon-money .lay:last-child {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
    padding: 0 3%;
    line-height: 1rem;
}
.style-three .get-btn {
    background-color: #fff;
}
.style-one:after, .style-three .get-btn:after {
    content: "";
    width: 1.2rem;
    position: absolute;
    top: 0;
    bottom: 0;
    display: block;
    z-index: 9;
    background-color: #fff;
    background-position: 100% 35%;
    background-size: 2rem .66rem;
    background-image: -webkit-linear-gradient(135deg,#e5004f 25%,transparent 25%,transparent),-webkit-linear-gradient(225deg,#e5004f 25%,transparent 25%,transparent),-webkit-linear-gradient(135deg,transparent 75%,#e5004f 75%),-webkit-linear-gradient(225deg,transparent 75%,#e5004f 75%);
    background-image: linear-gradient(-45deg,#e5004f 25%,transparent 25%,transparent),linear-gradient(-135deg,#e5004f 25%,transparent 25%,transparent),linear-gradient(-45deg,transparent 75%,#e5004f 75%),linear-gradient(-135deg,transparent 75%,#e5004f 75%);
}
.style-three .get-btn:after {
    left: -30px;
    width:30px;
    background-image: -webkit-linear-gradient(135deg,#ffffff 25%,#378ae8 25%,#378ae8);
    background-image: linear-gradient(-45deg,#ffffff 25%,#378ae8 25%,#378ae8);
}

